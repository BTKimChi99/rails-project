<h1>Edit User</h1>

<%= form_with model: @user, url: admin_user_path(@user), method: :patch, local: true do |form| %>
  <div>
    <%= form.label :email %><br>
    <%= form.email_field :email %>
  </div>

  <div>
    <%= form.label :role %><br>
    <%= form.select :role, [["Admin", 1], ["User", 0]] %>
  </div>

  <div>
    <%= form.submit "Update" %>
  </div>
<% end %>

