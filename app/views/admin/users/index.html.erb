<h2>User management</h2>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Email</th>
      <th>Role</th>
      <th>Avatar</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.email %></td>
        <td><%= user.role == 1 ? "Admin" : "User" %></td>
        <td>
          <% if user.avatar.attached? %>
            <%= image_tag user.avatar.variant(resize_to_limit: [50, 50]) %>
          <% else %>
            No avatar
          <% end %>
        </td>
        <td>
          <%= link_to "Edit", edit_admin_user_path(user) %> |
          <%= link_to "Delete", admin_user_path(user), method: :delete, data: { confirm: "Are you sure?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
