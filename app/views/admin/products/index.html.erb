<h1>List products</h1>
<%= link_to 'Add product new.', new_admin_product_path %>

<% if @products.any? %>
  <table>
      <thead>
          <tr>
              <th>Name</th>
              <th>Price</th>
              <th></th>
          </tr>
      </thead>
      <tbody>
          <% @products.each do |product| %>
              <tr>
                  <td><%= product.name %></td>
                  <td><%= number_to_currency(product.price, unit: "$") %></td>
                  <td>
                      <%= link_to 'View', admin_product_path(product) %> |
                      <%= link_to 'Edit', edit_admin_product_path(product) %> |
                      <%= link_to 'Delete', admin_product_path(product), method: :delete, data: { confirm: 'Are you sure?' } %>
                  </td>
              </tr>
          <% end %>
      </tbody>
  </table>
<% else %>
  <p>No products found.</p>
<% end %>

