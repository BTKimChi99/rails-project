  <div class="content-page" style="margin-left: 0;">
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <% if current_admin_user %>
                    <p class="mb-3">This is your account information page!</p>
                    <% if @user.role == 1 %>
                      <p>
                        <%= link_to "Access to the management page", admin_root_path %>
                      </p>
                    <% end %>
                <% else %>
                    <p>
                      <%= link_to "Login", login_path %> or
                      <%= link_to "Register", register_path %>
                    </p>
                <% end %>
            </div>
            <div class="row">
                <h4 class="header-title mb-3">Detailed information</h4>
                <div class="table-responsive">
                    <table class="table table-bordered table-nowrap mb-0">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Email</th>
                                <th>Start time</th>
                                <th>Role</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                              <th class="text-muted"><%= @user.id %></th>
                              <td><%= @user.email %></td>
                              <td><%= @user.created_at.strftime("%Y-%m-%d") %></td>
                              <td><%= @user.role == 1 ? "Admin" : "User" %></td>
                              <td>
                                <%= link_to edit_home_path, class: "badge badge-success" do %>
                                  Edit
                                <% end %>
                              </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
